<div class="col-sm-6 col-lg-4">
  <div class="card">
  <%= link_to post do %>
    <div class="card-topper" style="background-image: url(https://static.pexels.com/photos/36717/amazing-animal-beautiful-beautifull.jpg)"></div>
  <% end %>
    <div class="card-block">
      <h4 class="card-title"><%= link_to post.title, post %></h4>
      <p class="published-date"><%= post.created_at %></p>
      <p class="card-text"><%= truncate(post.description, length: 130) %></p>
    </div>
  </div>
</div>